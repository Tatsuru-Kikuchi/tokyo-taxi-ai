# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project"} # Your Firebase service account JSON

# OpenWeather API Configuration
OPENWEATHER_API_KEY=bd17578f85cb46d681ca3e4f3bdc9963 # Your OpenWeather API key

# LINE Messaging API Configuration (for support integration)
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_DEVELOPER_USER_ID=your_line_user_id_for_alerts
SUPPORT_LINE_USER_ID=your_support_team_line_user_id

# Server Configuration
NODE_ENV=production
PORT=8080

# Security Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://your-app.expo.dev

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
CONNECTION_TIMEOUT=300000

# Error Handling Configuration
ENABLE_ERROR_ALERTS=true
ERROR_ALERT_THRESHOLD=5 # Send alert after 5 errors in 5 minutes