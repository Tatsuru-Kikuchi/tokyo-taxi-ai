{
  "expo": {
    "name": "全国AIタクシー",
    "slug": "tokyo-taxi-ai",
    "version": "3.0.1",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "zenkokuaitaxi",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": false,
      "bundleIdentifier": "com.zenkoku.aitaxi",
      "buildNumber": "112",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "配車サービスのために位置情報を使用します",
        "NSLocationAlwaysUsageDescription": "バックグラウンドでも配車状況を更新します",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "最適な配車サービスを提供するために位置情報を使用します",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "LSApplicationQueriesSchemes": [
          "line"
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "UIRequiresFullScreen": false,
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown"
        ],
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.zenkoku.aitaxi",
      "versionCode": 108,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "配車サービスの品質向上のため、位置情報を使用します。"
        }
      ]
    ],
    "extra": {
      "backendUrl": "https://tokyo-taxi-ai-backend-production.up.railway.app",
      "lineChannelId": "2007928791",
      "lineOAId": "@dhai52765howdah",
      "eas": {
        "projectId": "0d3e0ad5-b89e-445b-961c-390962b4a4d6"
      }
    },
    "owner": "tatsuru-kikuchi"
  }
}
